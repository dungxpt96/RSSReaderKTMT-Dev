<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/padding_large"
    android:layout_marginStart="@dimen/padding_large"
    android:layout_marginTop="@dimen/padding_large"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/corner_small"
    app:cardElevation="@dimen/evelation_small">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_small"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/corner_small"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imv"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:paddingEnd="@dimen/padding_small"
                    android:paddingStart="@dimen/padding_small"
                    android:text="dffffffffffffffffff0fffffffffffffdfdfdfdfdfdfdfdffdfdfdfdfdfdfdfdfdf"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:paddingEnd="@dimen/padding_small"
                    android:paddingStart="@dimen/padding_small"
                    android:text="22:22:22 14/05/2018 "
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="3"
                    android:paddingEnd="@dimen/padding_small"
                    android:paddingStart="@dimen/padding_small"
                    android:text="Ngày hôm qua , tại Hà Nội, thanh niên Nguyễn Quang Huy đã bị bắt vì tội quá đẹp trai. Khi chúng tôi đến với cơ quan chức năng . Bộ trưởng bộ công an , Thượng"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imvBookmark"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/bt_checkbox"
                android:gravity="center"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>